generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Event {
  id           String        @id @default(cuid())
  name         String
  description  String
  location     String
  dateTime     String
  participants Participant[]
  categoryId   String
  category     Category      @relation(fields: [categoryId], references: [id])
}

model Participant {
  id      String @id @default(cuid())
  name    String
  email   String
  eventId String
  event   Event  @relation(fields: [eventId], references: [id])
}

model Category {
  id     String  @id @default(cuid())
  name   String
  events Event[]
}
